<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".TaskActivity">

    <!-- Date navigation -->
    <LinearLayout
        android:id="@+id/dateNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Monday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_mon"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPrevDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_5"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_monday"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPrevWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_19"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_may"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPrevYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_2025"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Navigation arrow -->
        <ImageButton
            android:id="@+id/btnPrevDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@null"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="@string/desc_prev_day" />

        <!-- Tuesday (Current) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_tue"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCurrentDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_6"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_tuesday"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCurrentWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_19"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCurrentMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_may"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCurrentYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_2025"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Navigation arrow -->
        <ImageButton
            android:id="@+id/btnNextDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@null"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="@string/desc_next_day" />

        <!-- Wednesday -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_wed"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvNextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_7"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_wednesday"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvNextWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_19"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_may"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvNextYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year_2025"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Today button -->

    <!-- Current date display -->


    <TextView
        android:id="@+id/tvCurrentFullDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/full_date"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/dateNavigation" />


    <!-- Daily Quest section -->
    <TextView
        android:id="@+id/tvDailyQuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_quest"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentFullDate" />


    <!-- Task categories -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvDailyQuest"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <Button
                android:id="@+id/btnToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="236dp"
                android:layout_marginEnd="32dp"
                android:text="@string/today"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Overdue tasks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1A237E"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_alert"
                        app:tint="@color/blue_accent"
                        android:contentDescription="@string/desc_overdue_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/over_due"
                        android:textColor="@color/blue_accent"
                        android:layout_marginStart="8dp" />

                    <ImageButton
                        android:id="@+id/btnExpandOverdue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:background="@null"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="@string/expand_overdue_tasks" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOverdueCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zero_tasks"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp" />

                <!-- Add container for overdue tasks -->
                <LinearLayout
                    android:id="@+id/overdueTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp" />

                <!-- Add this button -->
                <Button
                    android:id="@+id/btnAddOverdueTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Task"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#3F51B5" />
            </LinearLayout>

            <!-- Today tasks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1A2E1A"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_today"
                        app:tint="@color/blue_accent"
                        android:contentDescription="@string/desc_today_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/today_tasks"
                        android:textColor="@color/blue_accent"
                        android:layout_marginStart="8dp" />

                    <ImageButton
                        android:id="@+id/btnExpandToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:background="@null"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="@string/expand_today_tasks" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTodayCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zero_tasks"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp" />

                <!-- Add container for today tasks -->
                <LinearLayout
                    android:id="@+id/todayTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp" />

                <!-- Add this button -->
                <Button
                    android:id="@+id/btnAddTodayTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Task"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#3F51B5" />
            </LinearLayout>

            <!-- Upcoming tasks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1A1A2E"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="@color/blue_accent"
                        android:contentDescription="@string/desc_upcoming_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upcoming_tasks"
                        android:textColor="@color/blue_accent"
                        android:layout_marginStart="8dp" />

                    <ImageButton
                        android:id="@+id/btnExpandUpcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:background="@null"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="@string/expand_upcoming_tasks" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvUpcomingCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/two_tasks"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp" />

                <!-- Add container for upcoming tasks -->
                <LinearLayout
                    android:id="@+id/upcomingTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp" />

                <!-- Add this button -->
                <Button
                    android:id="@+id/btnAddUpcomingTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Task"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#3F51B5" />
            </LinearLayout>

            <!-- Done tasks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1A2E1A"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_send"
                        app:tint="@color/green_accent"
                        android:contentDescription="@string/desc_done_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/done"
                        android:textColor="@color/green_accent"
                        android:layout_marginStart="8dp" />

                    <ImageButton
                        android:id="@+id/btnExpandDone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:background="@null"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="@string/expand_done_tasks" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDoneCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/two_tasks"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp" />

                <!-- Add container for done tasks -->
                <LinearLayout
                    android:id="@+id/doneTasksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp" />

                <!-- Add this button -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
